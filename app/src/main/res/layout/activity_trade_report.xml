<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reportMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#007500"
    android:paddingVertical="20dp"
    tools:context=".TradeReport">
    <ImageView
        android:id="@+id/reportImageView"
        android:layout_width="300px"
        android:layout_height="300px"

        android:src="@drawable/reward"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <android.widget.LinearLayout
        android:id="@+id/reportLinearLayout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:paddingHorizontal="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reportImageView"
        app:layout_constraintVertical_bias="0.05">

        <TextView
            android:id="@+id/reportGainTypeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            android:text="Gain : "
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/reportGainTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="20T"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold" />
    </android.widget.LinearLayout>

    <TextView
        android:id="@+id/reportGainPercentTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="34%"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reportLinearLayout1"
        app:layout_constraintVertical_bias="0.1" />
    <TextView
        android:id="@+id/reportDaysTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="In 5 days"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reportGainPercentTextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/reportLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Annual Return:"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reportDaysTextView"
        app:layout_constraintVertical_bias="0.4" />
    <TextView
        android:id="@+id/annualGainTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="56%"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reportLabel"
        app:layout_constraintVertical_bias="0.1" />


</androidx.constraintlayout.widget.ConstraintLayout>