<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompanyInfo">

    <android.widget.LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="vertical"
        android:paddingHorizontal="20sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/codeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="RELIANCE"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="2000"
            android:textSize="30sp"
            android:textAlignment="textStart"/>
        <android.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/changeNoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+200"
                android:textSize="22sp"/>
            <TextView
                android:id="@+id/changePercentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   (+0.6%)"
                android:textSize="22sp"/>

        </android.widget.LinearLayout>
        <android.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="30sp">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.4"/>
            <Button
                android:id="@+id/compInfoBuy"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1.0"
                android:layout_gravity="center"
                android:text="Buy"
                android:textSize="20sp"
                android:backgroundTint="#5B8801"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.6"/>
            <Button
                android:id="@+id/compInfoSell"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1.0"
                android:layout_gravity="center"
                android:text="sell"
                android:textSize="20sp"
                android:backgroundTint="#CA0000"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.4"/>

        </android.widget.LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:text="Day Performance : "
            android:textSize="20dp"/>
        <ProgressBar
            android:id="@+id/compInfoDayProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressBackgroundTint="#FF7A7A"
            android:progressTint="#92C300"
            android:progressBackgroundTintMode="src_over"
            android:progressTintMode="src_over"
            android:max="100"
            android:min="0"
            android:progress="60"
            />
        <android.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dayLowTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="DayLow"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/dayHighTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="DayHigh"
                android:textAlignment="textEnd"
                android:textSize="20sp"/>

        </android.widget.LinearLayout>

        <android.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20sp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Market Cap"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/marketCapTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="20T"
                android:textSize="20sp"
                android:textAlignment="textEnd"/>
        </android.widget.LinearLayout>
        <android.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20sp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="P/E"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/peRatioTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="20"
                android:textSize="20sp"
                android:textAlignment="textEnd"/>
        </android.widget.LinearLayout>
        <android.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20sp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Previous Close"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/previousCloseTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="1900"
                android:textSize="20sp"
                android:textAlignment="textEnd"/>
        </android.widget.LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="20sp"
            android:text="52 Week Performance : "
            android:textSize="20dp"/>
        <ProgressBar
            android:id="@+id/compInfoYearProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressBackgroundTint="#FF7A7A"
            android:progressTint="#92C300"
            android:progressBackgroundTintMode="src_over"
            android:progressTintMode="src_over"
            android:max="100"
            android:min="0"
            android:progress="40"
            />
        <android.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/yearLowTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="YearLow"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/yearHighTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="YearHigh"
                android:textAlignment="textEnd"
                android:textSize="20sp"/>

        </android.widget.LinearLayout>
    </android.widget.LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>